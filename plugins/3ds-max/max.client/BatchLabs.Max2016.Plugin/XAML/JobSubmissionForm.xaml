<UserControl
    x:Class="BatchLabs.Max2016.Plugin.XAML.JobSubmissionForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:BatchLabs.Max2016.Plugin.XAML"
    mc:Ignorable="d" 
    MinHeight="400" MinWidth="550"
    d:DesignHeight="400" d:DesignWidth="550"
    Background="#FF434242"
    Name="LayoutRoot">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Stretch" Margin="10" Width="Auto" Grid.Row="0" Grid.Column="0">
            <Label Name="JobDetailsTitle" Content="Job Details" Foreground="#CCCCCC" FontWeight="Bold" />
            <Grid HorizontalAlignment="Stretch" Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Label Name="JobNameLabel" Content="Job ID:" HorizontalAlignment="Right" VerticalContentAlignment="Center" Foreground="#CCCCCC" FontWeight="Bold" Grid.Row="0" Grid.Column="0" />
                <TextBox Name="JobId" Height="27" Margin="0,2" VerticalContentAlignment="Center" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" />

                <Label Name="TemplateLabel" Content="Template:" HorizontalAlignment="Right" VerticalContentAlignment="Center" Foreground="#CCCCCC" FontWeight="Bold" Grid.Row="1" Grid.Column="0" />
                <ComboBox 
                    ItemsSource="{Binding Path=Templates}" 
                    SelectedValue="{Binding Path=SelectedTemplate}" 
                    SelectedValuePath="Key"
                    DisplayMemberPath="Value"
                    VerticalContentAlignment="Center"
                    Height="27" Margin="0,2"
                    Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3">
                </ComboBox>

                <Label Name="FrameStartLabel" Content="Frame Start:" HorizontalAlignment="Right" VerticalContentAlignment="Center" Foreground="#CCCCCC" FontWeight="Bold" Grid.Row="2" Grid.Column="0" />
                <TextBox Name="FrameStart" Text="1" Height="27" Margin="0,2" VerticalContentAlignment="Center" PreviewTextInput="ValidateNumber" Grid.Row="2" Grid.Column="1" />
                <Label Name="FrameEndLabel" Content="Frame End:" HorizontalAlignment="Right" VerticalContentAlignment="Center" Foreground="#CCCCCC" FontWeight="Bold" Grid.Row="2" Grid.Column="2" />
                <TextBox Name="FrameEnd" Text="1" Height="27" Margin="0,2" VerticalContentAlignment="Center" Grid.Row="2" Grid.Column="3" />

                <Label Name="RendererLabel" Content="Renderer:" HorizontalAlignment="Right" VerticalContentAlignment="Center" Foreground="#CCCCCC" FontWeight="Bold" Grid.Row="3" Grid.Column="0" />
                <ComboBox 
                    ItemsSource="{Binding Path=Renderers}" 
                    SelectedValue="{Binding Path=SelectedRenderer}" 
                    SelectedValuePath="Key"
                    DisplayMemberPath="Value"
                    VerticalContentAlignment="Center"
                    Height="27" Margin="0,2"
                    Grid.Row="3" Grid.Column="1">
                </ComboBox>
            </Grid>

            <Label Name="AssetsTitle" Content="Scene Details" Foreground="#CCCCCC" FontWeight="Bold" Margin="0,10,0,0" />

            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Label Name="SceneFileLabel" Content="Max File:" HorizontalAlignment="Right" VerticalContentAlignment="Center" Foreground="#CCCCCC" FontWeight="Bold" Grid.Row="0" Grid.Column="0" />
                <Label Name="SceneFile" Height="27" Margin="0,2" Padding="0"  Foreground="#CCCCCC" VerticalContentAlignment="Center" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" />

                <Label Name="AssetsLabel" Content="Assets:" HorizontalAlignment="Right" VerticalContentAlignment="Center" Foreground="#CCCCCC" FontWeight="Bold" Grid.Row="1" Grid.Column="0" />
            </Grid>
        </StackPanel>
        <Border BorderThickness="0,1,0,0" BorderBrush="#CCCCCC" Height="40" Grid.Row="1" Grid.Column="0">
            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button Name="SubmitButton" Content="Submit Job" Height="27" Width="125" Margin="0,0,5,0" Click="SubmitButton_Click"></Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
